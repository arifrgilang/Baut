<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
    </style>

    <style name="Theme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <!-- Styling Here -->

    <style name="card_character">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">@color/translucent_black</item>
    </style>

    <style name="text_character">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
</resources>
